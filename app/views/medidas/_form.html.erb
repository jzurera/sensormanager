<%= semantic_form_for @medida do |f| %>
  <%= f.inputs do %>
	<%= f.input :sensor, :as => :select, :collection => Hash[Sensor.all.map{|d| [d.nombre, d.id]}]  %> 
	<%= f.input :fecha %>
    <%= f.input :valor %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
