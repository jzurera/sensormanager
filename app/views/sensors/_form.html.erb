<%= semantic_form_for @sensor do |f| %>
  <%= f.inputs do %>
	<%= f.input :concentrador_id, :as => :select, :collection => Hash[Concentrador.all.map{|d| [d.nombre, d.id]}]  %>  
    <%= f.input :nombre %>
    <%= f.input :descripcion %>
    <%= f.input :estado %>
    <%= f.input :parametro %>
    <%= f.input :valor %>
    <%= f.input :uds %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
